{% extends 'base.html.twig' %}

{% block body %}
    <h1>Deplacement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deplacement.id }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ deplacement.destination }}</td>
            </tr>
            <tr>
                <th>Mission</th>
                <td>{{ deplacement.mission }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('deplacement_index') }}">Back to the list</a>
